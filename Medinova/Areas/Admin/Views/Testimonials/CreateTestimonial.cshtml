@model Medinova.Models.Testimonial
@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="dashboard-section-header d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1 section-title">Referans Ekleme Sayfası</h4>
                <p class="mb-0 section-subtitle">
                    Referans ekleme işlemlerini bu sayfadan yapabilirsiniz...
                </p>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{

    <div class="mb-3">
        <label>Ad Soyad</label>
        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label>Ünvan</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        <label>Görsel Url</label>
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        <label>Açıklama</label>
        @Html.TextAreaFor(x => x.Comment, new { @class = "form-control", rows = 5 })
    </div>


    <button class="btn btn-primary">Kaydet</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
}




