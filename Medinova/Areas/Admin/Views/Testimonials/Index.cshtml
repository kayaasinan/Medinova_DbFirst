@model List<Medinova.Models.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row mb-4">
    <div class="col-12">
        <div class="dashboard-section-header d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1 section-title">Referanslarımız</h4>
                <p class="mb-0 section-subtitle">
                    Referans düzenlemelerini bu sayfadan yapabilirsiniz...
                </p>
            </div>
            <a href="/Admin/Testimonials/CreateTestimonial" class="btn btn-outline-light rounded-pill px-4 py-2 d-inline-flex align-items-center gap-2">
                <i class="fa fa-plus-circle"></i>
                Yeni Ekle
            </a>
        </div>
    </div>
</div>
<div class="admin-table">
    <div class="table-responsive">
        <table class="table table-borderless align-middle">
            <thead class="fw-semibold text-dark">
                <tr>
                    <th>Görsel</th>
                    <th>Ad Soyad</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {


                    <tr class="align-middle">
                        <td><img src="@item.ImageUrl" style="height:75px; width:75px; border-radius:50%" /></td>
                        <td>@item.FullName </td>
                        <td>@item.Title </td>
                        <td>@(item.Comment.Length > 40 ? item.Comment.Substring(0, 40) + "..." : item.Comment)  </td>
                        <td class="text-center">
                            <button type="button" onclick="confirmDelete('/Admin/Testimonials/DeleteTestimonial/@item.TestimonialId')" class="btn btn-danger btn-circle">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                        <td>
                            <a href="/Admin/Testimonials/UpdateTestimonial/@item.TestimonialId" class="btn btn-primary btn-circle">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>






