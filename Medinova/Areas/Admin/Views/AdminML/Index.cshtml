
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="dashboard-section-header d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1 section-title">Dashboard/Microsoft ML.Net Tahmini Randevu Bilgileri</h4>
                <p class="mb-0 section-subtitle">
                    Tahmini randevu bilgilerini bu sayfada görebilirsiniz...
                </p>
            </div>
        </div>
    </div>
</div>
@Html.Action("MlDashboardCards", "AdminML")

<div class="row g-4 align-items-stretch">
    <div class="col-lg-6 col-md-12 d-flex flex-column">
        <div class="alert alert-info mb-2">
            📊 Önümüzdeki <strong>7 gün</strong> için hastanenin tahmini randevu yoğunluğu
        </div>

        <div class="card shadow-sm flex-fill">
            <div class="card-body d-flex flex-column">
                <h5 class="fw-bold mb-3">
                    📈 Önümüzdeki Hafta Tahmini Randevu Grafiği
                </h5>

                <div style="position:relative; height:260px;">
                    <canvas id="appointmentChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 col-md-12 d-flex flex-column">
        <div class="alert alert-info mb-2">
            📊 Önümüzdeki <strong>7 gün</strong> için Doktor bazlı tahmini randevu yoğunluğu
        </div>

        <div class="card shadow-sm flex-fill">
            <div class="card-body d-flex flex-column">
                <h5 class="fw-bold mb-3">
                    🩺 Önümüzdeki Ay Doktor Bazlı ML Tahmini
                </h5>

                <div style="position:relative; height:260px;">
                    @Html.Action("MonthlyForecast", "AdminML")
                </div>
            </div>
        </div>
    </div>

</div>
<br />
@Html.Action("DepartmentDonut", "AdminML")


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>

    const chartData = @Html.Raw(ViewBag.ChartData);


    const labels = chartData.map(x => x.Day);
    const values = chartData.map(x => x.Count);

    const ctx = document.getElementById('appointmentChart').getContext('2d');

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Tahmini Randevu Sayısı',
                data: values,
                borderColor: '#0d6efd',
                backgroundColor: 'rgba(13,110,253,0.15)',
                tension: 0.4,
                fill: true,
                pointRadius: 5,
                pointBackgroundColor: '#0d6efd'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        precision: 0
                    }
                }
            }
        }
    });
</script>



