@model List<Medinova.ML.Models.DepartmentDonutDto>

<div class="row g-4 align-items-stretch">
    <div class="col-lg-6 col-md-12 d-flex flex-column">
        <div class="alert alert-info mb-2">
            🏥 Bölüm bazlı <strong>randevu dağılımı</strong>
        </div>

        <div class="card shadow-sm flex-fill">
            <div class="card-body d-flex flex-column">
                <h5 class="fw-bold mb-3">
                    🩺 Bölüm Bazlı Randevu Dağılımı
                </h5>

                <div class="d-flex justify-content-center align-items-center"
                     style="position:relative; height:260px;">
                    <canvas id="departmentDonutChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    @Html.Action("DepartmentPieForecast", "AdminML")

</div>


<script>
    const data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));

    new Chart(document.getElementById('departmentDonutChart'), {
        type: 'doughnut',
        data: {
            labels: data.map(x => x.DepartmentName),
            datasets: [{
                data: data.map(x => x.AppointmentPercent),
                backgroundColor: [
                    '#0d6efd','#198754','#ffc107',
                    '#dc3545','#6f42c1','#20c997'
                ]
            }]
        },
        options: {
            responsive: true,
            cutout: '65%',
            plugins: {
                legend: { position: 'bottom' }
            }
        }
    });
</script>

