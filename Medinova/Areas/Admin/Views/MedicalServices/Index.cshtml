@model List<Medinova.Models.MedicalService>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row mb-4">
    <div class="col-12">
        <div class="dashboard-section-header d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1 section-title">Medikal Hizmetlerimiz</h4>
                <p class="mb-0 section-subtitle">
                    Medikal hizmet düzenlemelerini bu sayfadan yapabilirsiniz...
                </p>
            </div>
            <a href="/Admin/MedicalServices/CreateMedicalService" class="btn btn-outline-light rounded-pill px-4 py-2 d-inline-flex align-items-center gap-2">
                <i class="fa fa-plus-circle"></i>
                Yeni Ekle
            </a>
        </div>
    </div>
</div>
<div class="admin-table">
    <div class="table-responsive">
        <table class="table table-borderless align-middle">
            <thead class="fw-semibold text-dark">
                <tr>
                    <th>Ikon</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                 

                    <tr class="align-middle">
                        <td><i class="@item.Icon text-primary"></i></td>
                        <td>@item.Title </td>
                        <td>@(item.Description.Length > 40 ? item.Description.Substring(0, 40) + "..." : item.Description)  </td>
                        <td class="text-center">
                            <button type="button" onclick="confirmDelete('/Admin/MedicalServices/DeleteMedicalService/@item.MedicalServiceId')" class="btn btn-danger btn-circle">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                        <td>
                            <a href="/Admin/MedicalServices/UpdateMedicalService/@item.MedicalServiceId" class="btn btn-primary btn-circle">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>





