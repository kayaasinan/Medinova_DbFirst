@model List<Medinova.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="dashboard-section-header d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1 section-title">Hakkımızda</h4>
                <p class="mb-0 section-subtitle">
                    Hakkımızda alanı düzenlemelerini bu sayfadan yapabilirsiniz...
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">

    @foreach (var item in Model)
    {
        <div class="col-xl-8 col-lg-7 d-flex">
            <div class="card h-100 shadow-sm border-0 w-100">
                <img src="@item.ImageUrl" class="card-img-top" style="height:280px; object-fit:cover;" />
                <div class="card-body">
                    <h4 class="card-title mb-3">@item.Title</h4>
                    <p class="card-text text-muted">@item.Description</p>
                </div>
                <div class="card-footer bg-transparent border-0 d-flex justify-content-end gap-2">
                    <a href="/Admin/Abouts/UpdateAbout/@item.AboutId" class="btn btn-outline-primary">Düzenle</a>
                    <button type="button" onclick="confirmDelete('/Admin/Abouts/DeleteAbout/@item.AboutId')" class="btn btn-danger btn-circle">
                        Sil
                    </button>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-5 d-flex">
            <div class="card h-100 shadow-sm border-0 w-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h6 class="text-muted mb-1">Toplam Kayıt</h6>
                        <h3 class="mb-3">@Model.Count()</h3>
                    </div>
                    <hr />
                    <div>
                        <h6 class="text-muted mb-1">Son Güncelleme</h6>
                        <h5 class="mb-3">Yönetici Paneli</h5>
                    </div>
                    <hr />
                    <div>
                        <h6 class="text-muted mb-2">İpucu</h6>
                        <p class="text-muted mb-0">
                            Bu alanda ana <strong>"Hakkımızda"</strong> metni düzenlenmektedir. Ön yüzde doğrudan görüntülenir.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
