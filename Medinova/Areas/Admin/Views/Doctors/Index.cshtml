@model List<Medinova.Models.Doctor>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row mb-4">
    <div class="col-12">
        <div class="dashboard-section-header d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1 section-title">Doktorlarımız</h4>
                <p class="mb-0 section-subtitle">
                    Doktor kadrosu düzenlemelerini bu sayfadan yapabilirsiniz...
                </p>
            </div>
            <a href="/Admin/Doctors/CreateDoctor" class="btn btn-outline-light rounded-pill px-4 py-2 d-inline-flex align-items-center gap-2">
                <i class="fa fa-plus-circle"></i>
                Yeni Ekle
            </a>
        </div>
    </div>
</div>
<div class="container-fluid py-5">
    <div class="container">
        <div class="owl-carousel team-carousel">
            @foreach (var item in Model)
            {
                <div class="team-item px-2">
                    <div class="bg-white shadow-sm rounded overflow-hidden">

                        <div class="d-flex align-items-center">
                            <div style="width:140px; flex-shrink:0;" class="pb-2">
                                <img src="@item.ImageUrl" class="img-fluid h-100 w-100" style="object-fit:cover;" />
                            </div>
                            <div class="p-3 flex-grow-1">
                                <h5 class="mb-1 fw-semibold">@item.FullName</h5>
                                <span class="text-primary fst-italic d-block mb-1">
                                    @item.Department.Name
                                </span>
                                <p class="mb-0 text-muted small">
                                    @item.Description
                                </p>
                            </div>
                            <div class="d-flex justify-content-end gap-2 px-3 pb-3">
                                <a href="/Admin/Doctors/UpdateDoctor/@item.DoctorId" class="btn btn-sm btn-outline-primary rounded-pill">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <button type="button" onclick="confirmDelete('/Admin/Doctors/DeleteDoctor/@item.DoctorId')" class="btn btn-sm btn-outline-danger rounded-pill">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
