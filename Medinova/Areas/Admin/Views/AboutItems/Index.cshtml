@model List<Medinova.Models.AboutItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row mb-4">
    <div class="col-12">
        <div class="dashboard-section-header d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1 section-title">Hakkımızda Detayları</h4>
                <p class="mb-0 section-subtitle">
                    Hakkımızda detayları düzenlemelerini bu sayfadan yapabilirsiniz...
                </p>
            </div>
            <a href="/Admin/AboutItems/CreateAboutItem" class="btn btn-outline-light rounded-pill px-4 py-2 d-inline-flex align-items-center gap-2">
                <i class="fa fa-plus-circle"></i>
                Yeni Ekle
            </a>
        </div>
    </div>
</div>

<div class="row g-4">

    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
            <div class="card h-100 border-0 shadow-sm text-center rounded-4">

                <div class="card-body py-5 px-4 d-flex flex-column align-items-center">
                    <div class="rounded-circle d-flex align-items-center justify-content-center mb-4" style="width:70px;height:70px;background-color:#f5f7fb;">
                        <i class="@item.Icon text-primary" style="font-size:28px;"></i>
                    </div>
                    <h6 class="fw-semibold mb-0">@item.Title</h6>
                </div>
                <div class="card-footer bg-transparent border-0 pb-4 d-flex justify-content-center">
                    <a href="/Admin/AboutItems/UpdateAboutItem/@item.AboutItemId" class="btn btn-sm btn-outline-primary rounded-pill px-3 me-2"  style="margin-right:10px;">
                        Düzenle
                    </a>
                    <button type="button" onclick="confirmDelete('/Admin/AboutItems/DeleteAboutItem/@item.AboutItemId')" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                        Sil
                    </button>
                </div>

            </div>
        </div>
    }
</div>
