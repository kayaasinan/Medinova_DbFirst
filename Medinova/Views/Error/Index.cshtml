
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

@if (Session["FullName"] != null)
{
    <p class="text-muted">
        Sayın <strong>@Session["FullName"]</strong>,
        işlem sırasında bir hata oluştu.
    </p>
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">

            <div class="card shadow-sm border-0">
                <div class="card-body p-5">

                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger"
                           style="font-size: 64px;"></i>
                    </div>

                    <h2 class="fw-bold mb-3">Bir Hata Oluştu</h2>

                    <p class="text-muted mb-4">
                        İşleminiz sırasında beklenmeyen bir hata oluştu.<br />
                        Lütfen daha sonra tekrar deneyiniz.
                    </p>

                    <a href="/Default/Index" class="btn btn-primary rounded-pill px-4">
                        Ana Sayfaya Dön
                    </a>

                </div>
            </div>

        </div>
    </div>
</div>

