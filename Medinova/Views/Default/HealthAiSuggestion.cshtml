<div class="container my-5">

  
    <div class="row justify-content-center">
        <div class="col-lg-9">

         
            <div class="mb-4">
                <div class="d-flex align-items-center mb-2">
                    <span class="fs-3 me-2">🤖</span>
                    <h3 class="fw-bold mb-0">Medinova AI</h3>
                </div>
                <p class="text-muted mb-0">
                    Şikayetini analiz eder, seni en doğru kliniğe yönlendirir.
                </p>
            </div>

         
            <div class="row mb-4">
                <div class="col-md-4 mb-2">
                    <div class="border rounded p-3 h-100">
                        <div class="fw-semibold mb-1">Semptom Analizi</div>
                        <small class="text-muted">
                            Yazdığın belirtiler yapay zeka tarafından değerlendirilir.
                        </small>
                    </div>
                </div>
                <div class="col-md-4 mb-2">
                    <div class="border rounded p-3 h-100">
                        <div class="fw-semibold mb-1">Bölüm Önerisi</div>
                        <small class="text-muted">
                            En uygun poliklinik veya branş önerilir.
                        </small>
                    </div>
                </div>
                <div class="col-md-4 mb-2">
                    <div class="border rounded p-3 h-100">
                        <div class="fw-semibold mb-1">Ön Bilgilendirme</div>
                        <small class="text-muted">
                            Muhtemel durumlar hakkında bilgilendirme yapılır.
                        </small>
                    </div>
                </div>
            </div>

          
            <div class="card border-0 shadow-sm">
                <div class="card-body">

                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            Şikayetini Anlat
                        </label>
                        <textarea id="aiUserText"
                                  class="form-control"
                                  rows="5"
                                  placeholder="Örn: Son birkaç gündür baş ağrısı, mide bulantısı ve halsizlik yaşıyorum..."></textarea>

                    </div>


                
                    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                        <button class="btn btn-primary px-4" onclick="openAiModal()">
                            🧠 Yapay Zekaya Danış
                        </button>

                        <small class="text-muted">
                            ⚠️ Bu sistem tıbbi teşhis koymaz, yalnızca yönlendirme sağlar.
                        </small>
                    </div>

                </div>
            </div>

        </div>
    </div>

</div>



<div class="modal fade" id="aiModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    🤖 Yapay Zeka Sağlık Yönlendirmesi
                </h5>
                <button type="button" class="btn-close btn-close-white"
                        data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <div id="aiLoading" class="text-center py-5">
                    <div class="spinner-border text-info mb-3"></div>
                    <p class="fw-semibold mb-0">Yapay zeka analiz ediyor...</p>
                </div>

                <div id="aiResult" style="display:none;">
                    <div class="alert alert-success">
                        <h6 class="fw-bold mb-2">🏥 Medinova Hastanesi</h6>

                        <p class="mb-1">
                            <strong>Önerilen Bölüm:</strong>
                            <span id="aiDepartment"></span>
                        </p>

                        <p id="aiReason"
                           class="text-muted mb-2"
                           style="display:none;"></p>

                        <hr />

                        <p class="mb-0">
                            <strong>Öneri:</strong>
                            <span id="aiSuggestion"></span>
                        </p>
                    </div>
                </div>

            </div>

            <div class="modal-footer justify-content-between">
                <button type="button"
                        class="btn btn-outline-secondary"
                        data-bs-dismiss="modal">
                    Kapat
                </button>

                <button id="btnAppointment"
                        class="btn btn-success"
                        style="display:none;">
                    📅 Randevu Al
                </button>
            </div>

        </div>
    </div>
</div>
<div class="modal fade" id="aiModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">

            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title">
                    🤖 Yapay Zeka Sağlık Yönlendirmesi
                </h5>
                <button type="button" class="btn-close btn-close-white"
                        data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-4">

                <div id="aiLoading" class="text-center py-4">
                    <div class="spinner-border text-primary mb-3"></div>
                    <p class="fw-semibold mb-0">
                        Şikayetiniz analiz ediliyor...
                    </p>
                </div>
                 
                <div id="aiResult" style="display:none;">
                    <div class="alert alert-success rounded-3">
                        <h6 class="fw-bold mb-2">
                            🏥 Medinova Hastanesi
                        </h6>

                        <p class="mb-1">
                            <strong>Önerilen Bölüm:</strong>
                            <span id="aiDepartment"></span>
                        </p>

                        <p class="text-muted mb-2" id="aiReason"></p>

                        <div class="border-top pt-2">
                            <strong>Öneri:</strong>
                            <span id="aiSuggestion"></span>
                        </div>
                    </div>
                </div>

            </div>

            <div class="modal-footer justify-content-center">
                <a href="/Appointment/Index"
                   class="btn btn-success px-4">
                    📅 Randevu Al
                </a>
            </div>

        </div>
    </div>
</div>

<script>
    function openAiModal() {

        const text = document.getElementById("aiUserText").value;
        if (!text) return;


        $("#aiModal").modal("show");


        $("#aiLoading").show();
        $("#aiResult").hide();
        $("#btnAppointment").hide();
        $("#aiReason").hide();

        fetch("/Default/GetHealthAiSuggestion", {
            method: "POST",
            headers: {
                "Content-Type": "application/x-www-form-urlencoded"
            },
            body: "userText=" + encodeURIComponent(text)
        })
            .then(res => res.json())
            .then(res => {

                $("#aiLoading").hide();

                if (!res.success || !res.data) {
                    alert("Yapay zeka sonucu alınamadı.");
                    return;
                }

                const data = res.data;


                $("#aiDepartment").text(data.Department);
                $("#aiSuggestion").text(data.Suggestion);

                if (data.Reason) {
                    $("#aiReason").text(data.Reason).show();
                }

                $("#aiResult").fadeIn();


                $("#btnAppointment")
                    .off("click")
                    .on("click", function () {
                        window.location.href = "/Default/CreateAppointment";
                    })
                    .fadeIn();
            })
            .catch(err => {
                $("#aiLoading").hide();
                alert("Bir hata oluştu.");
                console.error(err);
            });
    }
</script>