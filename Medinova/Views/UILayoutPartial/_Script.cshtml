<script>
    (function () {
        const track = document.getElementById("announcementTrack");
        const wrapper = track.parentElement;

        let position = wrapper.offsetWidth;
        let speed = 4;
        let paused = false;
        let blinkCount = 0;

        function scrollText() {
            if (!paused) {
                position -= speed;
                track.style.transform = `translateX(${position}px)`;
            }


            const trackCenter = position + (track.offsetWidth / 2);
            const wrapperCenter = wrapper.offsetWidth / 2;


            if (!paused && Math.abs(trackCenter - wrapperCenter) < 2) {
                paused = true;
                blinkCount = 0;
                blink();
                return;
            }
             

            if (position < -track.offsetWidth) {
                position = wrapper.offsetWidth;
            }

            requestAnimationFrame(scrollText);
        }

        function blink() {
            track.style.opacity = track.style.opacity === "0" ? "1" : "0";
            blinkCount++;

            if (blinkCount < 6) {
                setTimeout(blink, 180);
            } else {
                track.style.opacity = "1";
                paused = false;
                requestAnimationFrame(scrollText);
            }
        }

        scrollText();
    })();
</script>